{
  "name": "@mcdiaz-liesa/ui-kit-liesa",
  "version": "1.0.18",
  "private": false,
  "scripts": {
    "compile:css": "npx sass --load-path=node_modules --no-charset --no-source-map  src/Lib/scss/index.scss dist/index.css",
    "purge:css": "npx purgecss --css dist/index.css --content src/**/*.html --output ./dist/ -keyframes -v --blocklist 'body' --blocklist 'label' --blocklist 'input'",
    "build:css": "npm run compile:css && npm run purge:css",
    "build:js": "npx esbuild src/js/test.js --bundle --outfile=dist/index.js --format=esm",
    "build": "npm run build:css && npm run build:js",
    "dev": "vite"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "esbuild": "^0.25.8",
    "sass": "^1.70.0",
    "vite": "^7.0.6"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "dependencies": {
    "bootstrap": "^5.3.7",
    "purgecss": "^7.0.2",
    "uncss": "^0.17.3"
  }
}
